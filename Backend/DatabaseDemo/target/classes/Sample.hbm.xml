<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <!-- ctrl + shift + f -->

    <!-- 1 class mapping must have only 1 id -->
    <!-- id : no need to be pk, no relation with DB definition -->
    <class name="com.mercury.bean.Sample" table="SAMPLE">
        <cache usage="read-write"/>
        <id name="name" column="NAME"/>
        <property name="age" column="AGE"></property>
    </class>

    <sql-query name="userQuery">
        select * from sample where age >:x
        <return alias="user" class="com.mercury.bean.Sample"/>
    </sql-query>

</hibernate-mapping>